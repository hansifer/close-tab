{
   "name": "CloseTab",
   "version": "1.5",
   "description": "Add a \"Close tab\" entry to the page context menu",
   "default_locale": "en",
   "manifest_version": 2,
   "options_page": "options_tab.html",
   "icons": {
      "16": "img/logo16.png",
      "48": "img/logo48.png",
      "128": "img/logo128.png"
   },
   "browser_action": {
      "default_icon": {
         "19": "img/logo19.png",
         "38": "img/logo38.png"
      },
      "default_title": "Close selected tab"
   },
   "background": {
      "scripts": [
         "common.js",
         "bg.js"
      ]
   },
   "content_security_policy": "script-src 'self'; object-src 'self'",
   "permissions": [
      "contextMenus"
   ],
  "applications": {
    "gecko": {
      "id": "gecko_id@closetab.com"
    }
  }
}
