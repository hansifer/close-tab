{
  "name": "CloseTab",
  "version": "1.7.0",
  "minimum_chrome_version": "42",
  "description": "Add a tab close action to the page context menu",
  "default_locale": "en",
  "manifest_version": 2,
  "options_ui": {
    "page": "options_inline.html",
    "chrome_style": true
  },
  "icons": {
    "16": "img/logo16.png",
    "48": "img/logo48.png",
    "128": "img/logo128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "img/logo19.png",
      "38": "img/logo38.png"
    },
    "default_title": "Close selected tab"
  },
  "background": {
    "scripts": ["util.js", "storage.js", "bg.js"]
  },
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "permissions": ["contextMenus", "storage"]
}
